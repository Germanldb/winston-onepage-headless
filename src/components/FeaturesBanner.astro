---
import { Image } from "astro:assets";
---

<div class="features-banner">
    <div class="container features-container">
        <div class="feature-item">
            <div class="feature-icon">
                <img
                    src="/images/envio-gratis.svg"
                    alt="Envío Gratis"
                    width="40"
                    height="40"
                    loading="lazy"
                />
            </div>
            <div class="feature-text">
                <span>ENVÍO GRATIS A PARTIR</span>
                <span>DE COP $100.000</span>
            </div>
        </div>

        <div class="feature-item">
            <div class="feature-icon">
                <img
                    src="/images/garantiaW&H.svg"
                    alt="Garantía"
                    width="40"
                    height="40"
                    loading="lazy"
                />
            </div>
            <div class="feature-text">
                <span>GARANTÍA</span>
                <span>DE UN AÑO</span>
            </div>
        </div>

        <div class="feature-item">
            <div class="feature-icon">
                <img
                    src="/images/Artesanos.svg"
                    alt="Artesanos"
                    width="40"
                    height="40"
                    loading="lazy"
                />
            </div>
            <div class="feature-text">
                <span>HECHO A MANO</span>
                <span>POR ARTESANOS</span>
            </div>
        </div>

        <div class="feature-item">
            <div class="feature-icon">
                <img
                    src="/images/devoluciones.svg"
                    alt="Devoluciones"
                    width="40"
                    height="40"
                    loading="lazy"
                />
            </div>
            <div class="feature-text">
                <span>30 DÍAS PARA</span>
                <span>DEVOLUCIONES</span>
            </div>
        </div>
    </div>
</div>

<style>
    .features-banner {
        background-color: var(--color-green);
        padding: 2rem 0;
        width: 100%;
        position: relative;
        z-index: 10;
    }

    .features-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .feature-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 1.5rem;
        min-width: 200px;
    }

    .feature-icon {
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .feature-icon img {
        height: 100%;
        width: auto;
    }

    .feature-text {
        display: flex;
        flex-direction: column;
        gap: 0.1rem;
    }

    .feature-text span {
        color: var(--color-white);
        font-family: var(--font-titles);
        font-size: 0.7rem;
        font-weight: 700;
        letter-spacing: 1.5px;
        line-height: 1.3;
    }

    @media (max-width: 992px) {
        .features-container {
            gap: 2rem;
        }
        .feature-item {
            min-width: 150px;
        }
    }

    @media (max-width: 768px) {
        .features-banner {
            padding: 2rem 1rem;
        }
        .features-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem 1rem;
        }
        .feature-text span {
            font-size: 0.65rem;
        }
    }
</style>
