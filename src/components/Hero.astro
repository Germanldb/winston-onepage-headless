<section id="inicio" class="hero">
    <div class="video-background">
        <video
            autoplay
            muted
            loop
            playsinline
            poster="/images/hero-poster.webp"
            preload="metadata"
        >
            <source src="/videos/hero-video.mp4" type="video/mp4" />
        </video>
        <div class="overlay"></div>
    </div>

    <!-- Overlay Image "Eleva tu estilo sin límites" -->
    <img
        src="/images/hero-overlay.png"
        alt="Eleva tu estilo sin límites"
        class="hero-overlay-img"
        loading="eager"
        fetchpriority="high"
    />
</section>

<style>
    .hero {
        position: sticky;
        top: 90px; /* Altura del header en desktop */
        margin-top: 90px; /* Para que no empiece debajo del header fixed */
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        background-color: #000;
        z-index: 1;
        transition: top 0.3s ease-in-out;
    }

    :global(body.is-header-hidden) .hero {
        top: 0;
    }

    .video-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        z-index: 1;
    }

    .video-background video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-overlay-img {
        position: absolute;
        bottom: 150px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10;
        width: 60%;
        max-width: 400px;
        opacity: 0;
        animation: fadeInUp 1.5s ease-out forwards;
        animation-delay: 0.5s; /* Pequeño retraso para que cargue primero el video */
    }

    @keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translate(-50%, 50px);
        }
        100% {
            opacity: 1;
            transform: translate(-50%, 0);
        }
    }

    @media (max-width: 992px) {
        .hero {
            height: auto;
            aspect-ratio: 16 / 9;
            top: 65px; /* Altura del header en mobile */
            margin-top: 65px;
            transition: top 0.3s ease-in-out;
        }

        :global(body.is-header-hidden) .hero {
            top: 0;
        }

        .hero-overlay-img {
            max-width: 400px;
            bottom: 20px;
        }
    }

    @media (max-width: 480px) {
        .hero-overlay-img {
            max-width: 160px;
            bottom: 15px;
        }
    }
</style>
