---
import Layout from "../layouts/Layout.astro";
import WishlistComponent from "../components/Wishlist";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Lista de Deseos | Winston & Harry">
    <Header />
    <main class="page-content">
        <div class="container">
            <div class="page-header">
                <h1>Mi Lista de Deseos</h1>
                <p>Guardados para despu√©s</p>
            </div>

            <WishlistComponent client:only="react" />
        </div>
    </main>
    <Footer />
</Layout>

<style>
    .page-content {
        padding: 140px 0 5rem; /* Top padding to account for fixed header */
        min-height: 80vh;
        background-color: #fcfcfc;
    }

    .container {
        max-width: 900px; /* Narrower container for better list readability */
        margin: 0 auto;
        padding: 0 1rem;
    }

    .page-header {
        margin-bottom: 3rem;
        text-align: left;
        border-bottom: 1px solid #eee;
        padding-bottom: 1.5rem;
    }

    .page-header h1 {
        font-family: var(--font-products);
        color: var(--color-green);
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        font-weight: 300;
    }

    .page-header p {
        font-family: var(--font-paragraphs);
        color: #666;
        font-size: 1rem;
    }
</style>
